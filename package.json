{
  "name": "address-book-api",
  "version": "1.0.0",
  "description": "This is an Address Book API built for STRV",
  "main": "src",
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "scripts": {
    "dev": "NODE_ENV=local nodemon src/api/index.ts",
    "build": "tsc -p .",
    "start": "NODE_ENV=production node dist/api/index.js",
    "test": "NODE_ENV=test mocha --exit -r ts-node/register test/**/*.test.ts",
    "lint": "eslint ./**/*.ts",
    "lint:fix": "eslint --fix ./**/*.ts",
    "db:migrate-dev": "prisma migrate dev --name init",
    "db:migrate-prod": "prisma migrate deploy",
    "db:push": "prisma db push",
    "infra": "docker-compose up -d",
    "infra:stop": "docker-compose down"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.3.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/kcors": "^2.2.6",
    "@types/koa": "^2.13.5",
    "@types/koa-compress": "^4.0.3",
    "@types/koa-router": "^7.4.4",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.6.4",
    "@types/ramda": "^0.28.15",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "chai": "^4.3.6",
    "eslint": "^8.21.0",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.19",
    "supertest": "^6.2.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@prisma/client": "^4.1.1",
    "bcrypt": "^5.0.1",
    "dotenv": "^16.0.1",
    "firebase": "^9.9.2",
    "jsonschema": "^1.4.1",
    "jsonwebtoken": "^8.5.1",
    "kcors": "^2.2.2",
    "koa": "^2.13.4",
    "koa-body": "^5.0.0",
    "koa-compose": "^4.1.0",
    "koa-compress": "^5.1.0",
    "koa-helmet": "^6.1.0",
    "koa-router": "^12.0.0",
    "pino": "^8.4.0",
    "prisma": "^4.1.1",
    "ramda": "^0.28.0"
  },
  "prisma": {
    "schema": "src/database/models/schema.prisma"
  }
}
